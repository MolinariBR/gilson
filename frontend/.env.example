# Backend API URL
# Development: http://localhost:4000
# Production: https://api.yourdomain.com
VITE_BACKEND_URL=http://localhost:4000

# Frontend Configuration
# Set to 'production' for production builds
VITE_NODE_ENV=development

# Production Example:
# VITE_BACKEND_URL=https://api.yourdomain.com
# VITE_NODE_ENV=production

# Category Configuration
# Enable dynamic categories (set to false to use static categories as fallback)
VITE_DYNAMIC_CATEGORIES_ENABLED=true

# Category API timeout in milliseconds
VITE_CATEGORY_API_TIMEOUT=10000

# Enable category caching in frontend
VITE_CATEGORY_CACHE_ENABLED=true