# JWT Configuration
# Generate a secure random string for JWT token signing
JWT_SECRET=your_production_jwt_secret_key_here_minimum_32_characters

# MongoDB Configuration
# MongoDB Atlas connection string for production
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/tomato-delivery-prod

# MercadoPago Configuration
# Production access token from https://www.mercadopago.com/developers/panel
MERCADOPAGO_ACCESS_TOKEN=APP_USR-your_production_mercadopago_access_token_here

# Frontend URL Configuration (Required for MercadoPago redirects)
# Production frontend domain
FRONTEND_URL=https://yourdomain.com

# Backend URL Configuration (Required for MercadoPago webhooks)
# Production backend API domain
BACKEND_URL=https://api.yourdomain.com

# Admin Panel URL Configuration
# Production admin panel domain
ADMIN_URL=https://admin.yourdomain.com

# Server Configuration
# Port for the backend server
PORT=4000

# Environment Mode
NODE_ENV=production

# Category Management Configuration
# Maximum file size for category images (in bytes) - 2MB
CATEGORY_IMAGE_MAX_SIZE=2097152

# Category image upload path (relative to backend root)
CATEGORY_UPLOAD_PATH=uploads/categories

# Category cache TTL in seconds (1 hour for production)
CATEGORY_CACHE_TTL=3600

# Enable category performance optimizations
CATEGORY_PERFORMANCE_ENABLED=true